{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "paths": {
      "$tasks/*": [
        "./tasks/*"
      ],
      "$preset": [
        "./src/preset.ts"
      ],
      "$schema/*": [
        "./src/schema/*"
      ],
      "$logger": [
        "./src/utils/logger.ts"
      ],
      "$cli/*": [
        "./src/cli/*"
      ],
      "$lib/*": [
        "./src/lib/*"
      ],
      "$utils/*": [
        "./src/utils/*"
      ],
      "$src/*": [
        "./src/*"
      ],
      "$root/*": [
        "./*"
      ],
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": [
    "src",
    "tasks"
  ]
}